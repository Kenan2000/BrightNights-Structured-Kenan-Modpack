    "//": "-----------------------------------------------------------------------------------------------------------------------",
    "id": "TALK_MAQUIS_ATHLETIC_ROOT",
    "type": "talk_topic",
    "dynamic_line": {
      "u_is_wearing": "badge_marshal",
      "yes": [ "Are you lost, marshal?", "What can I do for you marshal?" ],
